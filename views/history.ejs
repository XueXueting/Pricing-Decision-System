<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Optimal Price Table</title>
    <link rel="stylesheet" type="text/css" href="css/main.css" />
  </head>
  <body>
    <div class="logo">
      <img src="img/Optimal_Pricing.png"></img>
    </div>
    <nav>
      <div class="menu">
        <%if (data!='undefined') { %>
          <a href="/index">Home</a>
        <% } else{ %>
          <a href="/">Home</a>
        <% } %>
        <a href="/visualisation">Visualisation</a>
        <%if (currentUser!=null) { %>
          <a href="/history">History</a>
        <% } %>
        <a href="/about">About</a>
        <%if (currentUser) { %>
          <a href="/logout">Log Out</a>
        <% } else{ %>
          <a href="/login">Log In</a>
        <% } %>
      </div>
    </nav>
    <div class="container">
        <p>
            <% console.log("check", histData) %>
            <% if(histData!=undefined && currentUser){ %>
              <form action='/showsaved' method='post'>
              <br><br>
              <table id="history" class="center">
                <tr>
                    <th>Filename</th>
                    <th>Base File</th>
                    <th>Sales File</th>
                    <th>Created Date</th>
                    <th>Select File</th>
                </tr>
                  <% for(var i = count-1; i >= 0; i--){ %>
                    <tr>
                      <% var name = dataNames[i] %>
                      <% var value = histData[name] %>
                      <td class="td"><%= value.filename %></td>
                        <td class="td"><%= value.bfile %></td>
                        <td class="td"><%= value.sfile %></td>
                        <td class="td"><%= value.timestamp %></td>
                        <!-- <input type='text' value='<%=i %>' name='selectedText' /> -->
                        <!-- <input type='text' value='testing' name='selectedTest' /> -->
                        <td class="td"><button type="submit" value='<%=i %>' name='selectedText' formaction="/showsaved">See Result <%= i%>>>></button></td>
                        <td><img src="img/deleteConstraint.png" onclick="deleteRecord(this)" style="width: 35px;"></td>
                     </tr>
                  <% } %>
                    <!-- <input type="url" href="/showsavedresult"/> -->
                  
              </table>
            </form>
            <% } else { %>
                No Data 
            <% } %>
        </p>
    </div>

    <!-- Site footer -->
    <footer class="site-footer">
      <div class="footer-container">
        <div class="footer-col">
            <div class="col-sm-12 col-md-6">
              <h6>About</h6>
              <p class="text-justify">OptimalPrice.com <i>Pricing Analysis Calculator </i> is an ....</p>
            </div>
        </div>
        <div class="footer-col">
            <div class="col-xs-6 col-md-3">
              <h6>Quick Links</h6>
              <ul class="footer-links">
                <li><a href="/about">About Us</a></li>
                <li><a href="/about">Contact Us</a></li>
                <li><a href="#">Contribute</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Sitemap</a></li>
              </ul>
            </div>
          </div>
        <hr>
        <div class="footer-container">
          <div class="footer-row">
            <div class="col-md-8 col-sm-6 col-xs-12">
              <p class="copyright-text">Copyright &copy; 2021 All Rights Reserved by 
           <a href="#">Optimal Pricing System</a>.
              </p>
            </div>
  
            <div class="col-md-4 col-sm-6 col-xs-12">
              <ul class="social-icons">
                <li><a class="facebook" href="#"><img src="img/facebook.png" class="fa fa-facebook" style="width:100%;height: 100%;"></img></a></li>
                <li><a class="twitter" href="#"><img src="img/twitter.png" class="fa fa-twitter" style="width:100%;height: 100%;"></img></a></li>
                <li><a class="linkedin" href="#"><img src="img/linkedin.jpg" class="fa fa-linkedin" style="width:100%;height: 100%;"></img></a></li>   
              </ul>
            </div>
          </div>
        </div>
    </footer>

    <script>
      function deleteRecord(r) {
        var i = r.parentNode.parentNode.rowIndex;
        document.getElementById("history").deleteRow(i);
      }
    </script>
    <script type="text/javascript">
      var table = $("#results");
      table.on("click", "td", myFunction); 
      var url = "http://dbpedia.org/sparql";
    </script>

    <!-- The core Firebase JS SDK is always required and must be listed first -->
    <script src="/__/firebase/8.2.6/firebase-app.js"></script>

    <!-- TODO: Add SDKs for Firebase products that you want to use
        https://firebase.google.com/docs/web/setup#available-libraries -->
    <script src="/__/firebase/8.2.6/firebase-analytics.js"></script>

    <!-- Initialize Firebase -->
    <script src="/__/firebase/init.js"></script>
  </body>
</html>
